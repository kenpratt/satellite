<%= @partial.call :cancel_hotkeys, { :redirect_uri => @cancel_uri } %>

<form id="rename-hunk" action="<%= @uri.rename(@hunk) %>" method="post">
  <input type="hidden" name="return_to" value="<%= @referrer %>" />
  <input id="new-name" name="new_name" size="20" value="<%= @hunk.name %>" />
  <button type="submit">Save</button>
  or <a href="<%= @cancel_uri %>">Cancel</a>
</form>
